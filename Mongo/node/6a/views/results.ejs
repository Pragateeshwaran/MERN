<!DOCTYPE html>
<html lang="en">
<head>
    <title>Survey Results</title>
</head>
<body>
    <h2>Survey Results</h2>

    <% 
        let petCounts = {};
        results.forEach(result => {
            if (result.petOwnership.toLowerCase() === 'yes') {
                petCounts[result.favoritePet] = (petCounts[result.favoritePet] || 0) + 1;
            }
        });
    %>

    <h3>Pet Ownership Count</h3>
    <table border="1">
        <tr>
            <th>Pet Type</th>
            <th>Number of Owners</th>
        </tr>
        <% Object.keys(petCounts).forEach(pet => { %>
            <tr>
                <td><%= pet %></td>
                <td><%= petCounts[pet] %></td>
            </tr>
        <% }) %>
    </table>

    <h3>Survey Details</h3>
    <table border="1">
        <tr>
            <th>Name</th>
            <th>Favorite Pet</th>
            <th>Pet Ownership</th>
            <th>Spending ($)</th>
        </tr>
        <% results.forEach(result => { %>
            <tr>
                <td><%= result.name %></td>
                <td><%= result.favoritePet %></td>
                <td><%= result.petOwnership %></td>
                <td><%= result.petSpending %></td>
            </tr>
        <% }) %>
    </table>
</body>
</html>
